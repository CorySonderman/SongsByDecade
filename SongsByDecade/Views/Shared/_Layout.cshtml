<!--
  This page defines the overall structure of you project. Anything in the shared layout will
  transfer to every page on your website.  If you want to style an individual page you do
  not want it here.
  Key Points:
    - Impacts the appearance of every page on your project.
    - JavaScript libraries for jQuery and Bootstraps.  Bootstraps are reusable code that
      can make life easier for developers. w3 schools has a great resource with several
      bootstraps and a description of how they function.
      https://www.w3schools.com/bootstrap/bootstrap_ref_all_classes.asp
-->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SongsByDecade</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SongsByDecade.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Permanent+Marker">

    <style>
        /* Larger header text for "Influential Songs Through The Years" */
        .navbar-brand.large-text {
            font-size: 50px; /* larger px increases font for "Influential Songs Through The Years"*/
            text-shadow: 3px 1px 2px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Moved "Home" to the far left -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="navbar-brand large-text" asp-area="" asp-controller="Home" asp-action="Index">Influential Songs Through The Years</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Changed the Footer. Removed the default content and centered my name -->
    <footer class="border-top footer text-muted text-center">
        <div class="container">
            Created by Cory Sonderman
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
