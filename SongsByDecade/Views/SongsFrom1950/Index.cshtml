﻿
<!--
    This view displays a list of songs from the MySql database.
    Key Points:
    - Links to view, update, and delete each song.
    - Includes a link to create a new song.
-->
@model IEnumerable<SongsFrom1950>

<h2></h2> 
<p><a asp-action="CreateSong">Create New Song</a></p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Year Released</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.ID</td>
                <td>
                    <!-- Hyperlink allowing user to listen to song -->
                    <a href="@($"https://www.youtube.com/results?search_query={Uri.EscapeDataString(song.Title)}")" target="_blank">@song.Title</a>
                </td>
                <td>
                    <!-- Hyperlink to Wikedia allowing user to learn about the artist -->
                    <a href="@($"https://en.wikipedia.org/wiki/{Uri.EscapeDataString(song.Artist.Replace(" ", "_"))}")" target="_blank">@song.Artist</a>
                </td>
                <td>@song.Genre</td>
                <td>@song.YearReleased</td>
                <td>
                    <!--Allows user to update and delete at index.  No longer need 
                    a singel view-->
                    <a asp-action="UpdateSong" asp-route-id="@song.ID">Update</a>
                    <a asp-action="DeleteSong" asp-route-id="@song.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
