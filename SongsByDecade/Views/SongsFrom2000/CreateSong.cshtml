<!--
    This view is used for adding a new song to the database.
    Key Points:
    - Form for entering song details (title, artist, genre, year).
    - Sends data to the "AddSongToDatabase" action in the SongsController.
-->
@model SongsFrom2000

<h2>Add A Title</h2>
@using (Html.BeginForm("AddSongToDatabase", "SongsFrom2000", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Artist" class="control-label">Artist</label>
        <input asp-for="Artist" class="form-control" />
        <span asp-validation-for="Artist" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="control-label">Genre</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearReleased" class="control-label">Year Released</label>
        <input asp-for="YearReleased" class="form-control" />
        <span asp-validation-for="YearReleased" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Add Song" class="btn btn-primary" />
    </div>
}
