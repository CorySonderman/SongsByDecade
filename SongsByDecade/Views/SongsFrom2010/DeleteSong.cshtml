<!--
    This view is used for confirming the deletion of a song.
    Key Points:
    - Displays song details.
    - Form to confirm deletion.
    - Sends data to the "DeleteSongFromDatabase" action in SongsController.
-->
@model SongsFrom2010

<h2>Delete @Model.Title</h2>

<p>Are you sure you want to delete the following song?</p>
<form asp-action="DeleteSongFromDatabase" method="post">
    <div class="form-group">
        <label asp-for="ID" class="control-label">ID</label>
        <input asp-for="ID" type="text" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" type="text" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Artist" class="control-label">Artist</label>
        <input asp-for="Artist" type="text" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="control-label">Genre</label>
        <input asp-for="Genre" type="text" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="YearReleased" class="control-label">Year Released</label>
        <input asp-for="YearReleased" type="text" class="form-control" readonly />
    </div>

    <input type="submit" value="Delete Song" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
